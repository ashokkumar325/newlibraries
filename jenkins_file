@Library('newlibrary')_
pipeline
{
    agent any
    stages
    {
        stage('countinousdownload')
        {
            steps
            {
                script
                {
                    cicd.newGit("https://github.com/ashokkumar325/java.git")
                }
            }
        }
        stage('countinousbuild')
        {
            steps
            {
                script
                {
                    cicd.newMaven()
                }
            }
        }
        stage('countinousdeploy')
        {
            steps
            {
                script
                {
                    cicd.newDeploy("sharedlibrary1","172.31.93.91","testapp")
                }
            }
        }
        stage('countinoustesting')
        {
            steps
            {
                script
                {
                    cicd.newGit("https://github.com/ashokkumar325/Functionaltesting.git")
                    cicd.newSelenium("sharedlibrary1")
                }
            }
        }
        stage('countinousdelivery')
        {
            steps
            {
                script
                {
                    cicd.newDeploy("sharedlibrary1","172.31.94.209","prodapp")
                }
            }
        }
    }
}
